// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// DevHance User Model
// Mirrors key data from Clerk and links to their stories
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String   @unique // The unique identifier from Clerk
  email     String   @unique
  username  String?  // Optional username
  firstName String?
  lastName  String?
  imageUrl  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to Story model
  stories Story[]
}


// DevHance Story Model
// The core content of our platform
model Story {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  // Storing content as a JSON object is ideal for block-based editors like Tiptap
  content     Json?
  isPublished Boolean   @default(false)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relation to User model
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String    @db.ObjectId
}